{
    "height": 30,
    "margin-top": 10,
    "margin-left": 10,
    "margin-bottom": 0,
    "margin-right": 10,
    "spacing": 0,
    "layer": "top",
    "modules-left": [
        "cpu",
        "memory",
        "disk",
        "custom/updates"
    ],
    "modules-center": [
        "hyprland/workspaces"
    ],
    "modules-right": [
        "backlight",
        "wireplumber",
        "battery",
        "clock"
    ],
    "tray": {
        "icon-size": 25,
        "spacing": 8
    },
    "battery": {
        "interval": 30,
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 20
        },
        "format": "{icon} {capacity}%",
        "format-charging": " {capacity}%",
        "format-plugged": " {capacity}%",
        "format-alt": "{time} {icon}",
        "format-icons": [
            "󰂎",
            "󰁺",
            "󰁻",
            "󰁼",
            "󰁽",
            "󰁾",
            "󰁿",
            "󰂀",
            "󰂁",
            "󰂂",
            "󰁹"
        ]
    },
    "clock": {
        "format": "󰥔 {:%H:%M}",
        "tooltip": true,
        "tooltip-format": "{: %A, %B %e %Y}"
    },
    "hyprland/workspaces": {
        "format": "{icon}",
        "on-click": "activate",
        "persistent-workspaces": {
            "*": 8
        },
        "format-icons": {
            "urgent": "",
            "active": "",
            "default": ""
        }
    },
    "backlight": {
        "device": "amdgpu_bl1",
        "format": "{icon} {percent}%",
        "format-icons": [
            "󰃞",
            "󰃟",
            "󰃠"
        ],
        "on-scroll-up": "brightnessctl set 1%+",
        "on-scroll-down": "brightnessctl set 1%-",
        "min-length": 6,
        "tooltip": false
    },
    "keyboard-state": {
        "capslock": true,
        "format": "{icon}{name}",
        "format-icons": {
            "locked": " ",
            "unlocked": " "
        }
    },
    "custom/updates": {
        "format": "{}",
        "exec": "~/.config/waybar/scripts/updates",
        "interval": 3600,
        "tooltip": false
    },
    "cpu": {
        "interval": 5,
        "format": " {usage}%",
        "max-length": 10,
        "on-click": "alacritty -o window.startup_mode=Fullscreen --title btop -e btop"
    },
    "disk": {
        "interval": 60,
        "format": "󰋊 {percentage_used}%",
        "path": "/",
        "tooltip": true,
        "tooltip-format": "HDD - {used} used out of {total} on {path} ({percentage_used}%)",
        "on-click": "alacritty -o window.startup_mode=Fullscreen --title btop -e btop"
    },
    "memory": {
        "interval": 10,
        "format": " {}%",
        "max-length": 10,
        "tooltip": true,
        "tooltip-format": "Memory - {used:0.1f}GB used",
        "on-click": "alacritty -o window.startup_mode=Fullscreen --title btop -e btop"
    },
    "wireplumber": {
        "format": "{icon} {volume}%",
        "format-muted": "󰖁",
        "on-click": "helvum",
        "format-icons": [
            "",
            "",
            ""
        ]
    },
    "hyprland/window" : {
        "format": "󰈈 {}",
    }
}
